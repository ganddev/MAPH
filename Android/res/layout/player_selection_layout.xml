<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_selection_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/player_selection_add_player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/screen_top_margin" >

        <EditText
            android:id="@+id/player_selection_player_name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />

        <Button
            android:id="@+id/player_selection_add_player_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plus_sign" />
        
    </LinearLayout>
    
    <Button
        android:id="@+id/player_selection_start_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/screen_default_margin"
        android:layout_marginBottom="@dimen/screen_default_margin" />
    
    <RelativeLayout
        android:id="@+id/player_selection_round_selection_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/player_selection_start_game_button" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/screen_default_margin"
            android:text="@string/rounds"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:id="@+id/numberPicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/screen_default_margin" />

    </RelativeLayout>
    
        <ListView
            android:id="@+id/player_selection_player_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_below="@id/player_selection_add_player_container"
            android:layout_above="@id/player_selection_round_selection_container" >
    </ListView>

</RelativeLayout>
